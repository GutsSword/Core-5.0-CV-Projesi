@using EntityLayer.Concrete
@model List<Announcement>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/Layout3.cshtml";
}

@{
    string color = "";
}

<style>
    tr:hover {
        cursor: pointer;
    }
</style>


<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Duyuru Tablosu</h4>
            <p class="card-description">
                <muted>Detayları Görmek için Sütunlara Tıklayınız.</muted>
            </p>
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Başlık</th>
                            <th>İçerik</th>
                            <th>Tarih</th>
                            <th>Tür</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach(var item in Model)
                        {
                            if(item.Status=="Acil")
                            {
                                color = "badge badge-danger";
                            }
                            if (item.Status == "Genel")
                            {
                                color = "badge badge-success";
                            }

                            <tr onclick="window.location='/User/Default/AnnouncementDetailes/@item.ID';">
                                <td>@item.ID</td>
                                <td>@item.Title</td>
                                <td>@item.Content.Substring(0,50)...</td>
                                <td>@Convert.ToDateTime(@item.Date).ToShortDateString()</td>
                                <td><label class="@color">@item.Status</label></td>
                            </tr>
                        }   
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

