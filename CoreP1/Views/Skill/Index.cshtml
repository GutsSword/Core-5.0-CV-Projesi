@using EntityLayer.Concrete
@model List<Skill>


@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/AdminLayout2.cshtml";
}


<div class="card-header border-0">
    <h3 class="mb-0"></h3>
</div>
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title"></h4>

            <div class="table-responsive">
                <table class="table table-default">
                    <thead>
                        <tr>
                            <th> # </th>
                            <th> Başlık </th>
                            <th> Oran </th>
                            <th> Sil</th>
                            <th> Düzenle </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.SkillID</td>
                                <td>@item.Title</td>
                                <td>%@item.Value</td>
                                <td> <a class="btn btn-outline-danger" href="/Skill/DeleteSkill/@item.SkillID"> Sil </a> </td>
                                <td> <a class="btn btn-outline-success" href="/Skill/UpdateSkill/@item.SkillID"> Düzenle </a> </td>

                            </tr>
                        }
                        <tr>
                            <td><a style="color:green" class="btn btn-link" href="/Skill/AddSkill/">+ Ekle </a> </td>
                            <td></td>
                            <td></td>

                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>