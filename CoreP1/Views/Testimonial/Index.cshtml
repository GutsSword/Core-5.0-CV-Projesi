@using EntityLayer.Concrete
@model List<Testimonial>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/AdminLayout2.cshtml";
}


<div class="col-12 grid-margin">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Referanslarım</h4> <br />
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th></th>
                            <th> Ad-Soyad </th>
                            <th> Paylaşım </th>
                            <th></th>
                            <th></th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach(var item in Model )
                        {
                            <tr>
                                <td></td>
                                <td>
                                    <img src="@item.ImageUrl" alt="image" />
                                    <span class="pl-2">@item.ClientName</span>
                                </td>
                                <td> @item.Comment.Substring(0,70)... </td>
                                <td>
                                    <a href="/Testimonial/TestimonialDelete/@item.TestimonialID" class="btn btn-outline-danger">Sil</a>
                                </td>
                                <td>
                                    <a href="/Testimonial/TestimonialDetail/@item.TestimonialID" class="btn btn-outline-warning">Detaylar</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


