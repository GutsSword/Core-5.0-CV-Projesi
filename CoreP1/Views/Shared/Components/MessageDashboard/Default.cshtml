@using EntityLayer.Concrete
@model List<Message>

@{
    string s = "https://cdn0.iconfinder.com/data/icons/social-messaging-ui-color-shapes/128/chat-circle-blue-512.png";
}

<div class="card-body">
    <div class="d-flex flex-row justify-content-between">
        <h4 class="card-title">Mesajlar</h4>
        <p class="text-muted mb-1 small"><a href="/Contact/Index/">Tümünü Görüntüle</a></p>
    </div>
    <div class="preview-list">
        @foreach (var item in Model)
        {
            <div class="preview-item border-bottom">
                <div class="preview-thumbnail">
                    <img src="@s" alt="image" class="rounded-circle" />
                </div>
                <div class="preview-item-content d-flex flex-grow">
                    <div class="flex-grow">
                        <div class="d-flex d-md-block d-xl-flex justify-content-between">
                            <h6 class="preview-subject"> @item.Name</h6>
                            <p class="text-muted text-small">@Convert.ToDateTime(@item.Date).ToString("dd,MM,yyyy")</p>
                        </div>
                        <p class="text-muted">@item.Content.Substring(0,8)...</p>
                    </div>
                </div>
            </div>
        }

    </div>
</div>