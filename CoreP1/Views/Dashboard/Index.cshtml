
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/AdminLayout2.cshtml";
}


<div class="content-wrapper">
    <div class="row">

    </div>
    @await Component.InvokeAsync("FeatureStatistics")
