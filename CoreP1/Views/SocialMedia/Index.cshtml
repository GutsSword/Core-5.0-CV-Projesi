@using EntityLayer.Concrete
@model List<SocialMedia>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/AdminLayout2.cshtml";
}


<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Sosyal Medyalarım</h4>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Başlık</th>
                            <th>Sil</th>
                            <th>Düzenle</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.SocialMediaID</td>
                                <td>@item.Name</td>
                                <td><a asp-controller="SocialMedia" asp-action="DeleteMedia" asp-route-id="@item.SocialMediaID" class="btn btn-outline-danger"> Sil </a></td>
                                <td>
                                    <a class="btn btn-outline-success" href="/SocialMedia/UpdateMedia/@item.SocialMediaID"> Düzenle </a>
                                </td>
                            </tr>
                        }
                        <tr>
                            <td> <a style="color:green" href="/SocialMedia/AddMedia/">+ EKLE</a></td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>