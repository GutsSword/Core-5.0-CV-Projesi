@model EntityLayer.Concrete.Message
@{
    ViewData["Title"] = "MessageDetail";
    Layout = "~/Views/Shared/AdminLayout2.cshtml";
}


<div style="min-height:300px;" class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Gönderen  @Model.Name ;</h4>
            <small>@Convert.ToDateTime(@Model.Date).ToShortDateString()</small>
            <div style="margin-top:20px;" class="table-responsive">
                <p style="font-size:18px;">&nbsp&nbsp;@Model.Content</p>
            </div> 
        </div>
    </div>
</div>

<div>
    <a style="color:green" class="btn btn-link" href="/Contact/Index/">Geri Dön</a>
</div>