@using EntityLayer.Concrete
@model List<Message>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/AdminLayout2.cshtml";
}


<style>
    tr:hover {
        cursor: pointer;
    }
</style>


<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">İletişim Tablosu</h4>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Gönderen</th>
                            <th>Mail</th>
                            <th>Tarih</th>
                            <th>Sil</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr onclick ="window.location='/Contact/MessageDetail/@item.MessageID';">
                                <td>@item.MessageID</td>
                                <td>@item.Name</td>
                                <td>@item.Mail</td>
                                <td>@Convert.ToDateTime(@item.Date).ToShortDateString()</td>
                                <td>
                                    <a href="/Contact/DeleteMessage/@item.MessageID" class="btn btn-outline-danger"> Sil </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
