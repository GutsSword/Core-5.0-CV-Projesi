@model EntityLayer.Concrete.About
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/AdminLayout2.cshtml";
}

<div style="width:10000px;">
    @using (Html.BeginForm("Index", "About", FormMethod.Post))
    {
        <div class="col-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title"></h4>
                    <form class="forms-sample">
                        <div class="form-group"> 
                            @Html.HiddenFor(x=>x.AboutID)
                            <label>Başlık</label>
                            @Html.TextBoxFor(x=>x.Title , new {@class="form-control"}) <br />
                            <label>Yaş</label>
                            @Html.TextBoxFor(x=>x.Age , new {@class="form-control"})<br />
                            <label>Mail</label>
                            @Html.TextBoxFor(x=>x.Mail , new {@class="form-control"})<br />
                            <label>Telefon</label>
                            @Html.TextBoxFor(x=>x.Phone , new {@class="form-control"})<br />
                            <label>Adres</label>
                            @Html.TextBoxFor(x=>x.Address , new {@class="form-control"})<br />
                            <label>Resim Dosya Yolu</label>
                            @Html.TextBoxFor(x=>x.ImageUrl , new {@class="form-control"})<br />
                            <label>Açıklama</label>
                            @Html.TextBoxFor(x=>x.Description , new {@class="form-control"})
                        </div>
                        <button type="submit" class="btn btn-primary mr-2">Kaydet</button>
                        <a class="btn btn-dark" href="/Portfolio/Index/">İptal Et</a>
                        <a  class="btn btn-outline-success"target="_blank" href="/Default/Index/">Önizleme</a>
                    </form>
                </div>
            </div>
        </div>
    }
</div>