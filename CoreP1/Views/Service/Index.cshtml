@using EntityLayer.Concrete
@model List<Service>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/AdminLayout2.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title"></h4>

            <div class="table-responsive">
                <table class="table table-default">
                    <thead>
                        <tr>
                            <th> Hizmet ismi </th>
                            <th> Sil</th>
                            <th> Düzenle </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Title</td>
                                <td> <a class="btn btn-outline-danger" href="/Service/DeleteService/@item.ServiceID"> Sil </a> </td>
                                <td> <a class="btn btn-outline-success" href="/Service/UpdateService/@item.ServiceID"> Düzenle </a> </td>
                                <td></td>
                                <td></td>
                                <td></td>
                            </tr>
                        }
                        <tr>
                            <td><a style="color:green" class="btn btn-link" href="/Service/AddService/">+ Ekle </a> </td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
