@model EntityLayer.Concrete.Service
@{
    ViewData["Title"] = "UpdateService";
    Layout = "~/Views/Shared/AdminLayout2.cshtml";
}

<div style="width:10000px;">
    @using (Html.BeginForm("UpdateService", "Service", FormMethod.Post))
    {
        <div class="col-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title"></h4>
                    <form class="forms-sample">
                        <div class="form-group">
                            @Html.HiddenFor(x=>x.ServiceID)
                            <label>Hizmet Alanı</label>
                            @Html.TextBoxFor(x=>x.Title , new {@class="form-control"}) <br />
                            <label>Icon Dosya Yolu</label>
                            @Html.TextBoxFor(x=>x.ImageUrl , new {@class="form-control"}) <br />
                        </div>
                        <button type="submit" class="btn btn-primary mr-2">Kaydet</button>
                        <a class="btn btn-dark" href="/Service/Index/">İptal Et</a>
                        <a class="btn btn-outline-success" target="_blank" href="/Default/Index/">Önizleme</a>
                    </form>
                </div>
            </div>
        </div>
    }

</div>
